<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>


<table>
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight %></td>
      <td><%= @pet.avg_height %></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Peso</th>
      <th>Altura</th>
      <th>Fecha</th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_h| %>
    <tr>
      <td><%= pet_h.weight %></td>
      <td><%= pet_h.heigth %></td>
      <td><%= pet_h.created_at.strftime("%D") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
